<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activityClass.RequestHelpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_background"
        android:gravity="center"
        android:orientation="vertical">


        <EditText
            android:inputType="" android:paddingTop="15sp"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_login_email"
            android:drawablePadding="10sp"
            android:hint="EMAIL"
            android:textColorHint="#ffffff" />

        <EditText
            android:paddingTop="15sp"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_login_password"
            android:drawablePadding="10sp"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:textColorHint="#ffffff" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:background="@drawable/buttonstyle_blue"
            android:drawableLeft="@drawable/ic_login_login"
            android:text="Login"
            android:textColor="#ffffff"
            android:textSize="20sp" />


    </LinearLayout>


</LinearLayout>