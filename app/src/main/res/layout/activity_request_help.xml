<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".activityClass.RequestHelpActivity">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="text"
            android:textColorHint="#eeeeee"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20sp"
            android:gravity="start"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+880"
                android:textColor="#fff"
                android:textSize="20sp" />

            <EditText
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="6dp"
                android:hint="Phone"
                android:inputType="phone"
                android:maxLength="10"
                android:textColorHint="#eeeeee" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/loc_ll"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="40sp"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="9"
                android:text="Location of Incident"
                android:textColor="#fff"
                android:textSize="20sp" />


            <Button
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_help_desc_location"
                android:clickable="false"
                android:gravity="end" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pic_ll"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="9"
                android:text="Picture of Incident"
                android:textColor="#fff"
                android:textSize="20sp" />


            <Button
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_gravity="center"
                android:background="@drawable/ic_help_desc_picture"
                android:clickable="false" />

        </LinearLayout>

        <Button
            android:id="@+id/req_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50sp"
            android:background="@drawable/buttonstyle_blue"
            android:text="Request Help"
            android:textColor="#ffffff"
            android:textSize="20sp" />


    </LinearLayout>
</ScrollView>
